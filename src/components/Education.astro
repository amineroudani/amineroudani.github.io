---
import { siteConfig } from "../config";
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
---

{
  hasEducation && (
    <section id="education" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-white text-center mb-8 lg:mb-12">
          Education
        </h2>

        <div class="space-y-8">
          {siteConfig.education.map((edu) => (
            <div class="bg-neutral-900/70 backdrop-blur-md shadow-sm p-4 sm:p-5 md:p-6 hover:bg-neutral-900/80 hover:shadow-md transition-all duration-300">
              <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-4 gap-4">
                {edu.logo && (
                  <div class={edu.logo.includes('Ecole_Polytechnique') ? 'bg-white p-1' : ''}>
                    <img
                      src={edu.logo}
                      alt={edu.school}
                      class={edu.logo.includes('Ecole_Polytechnique') ? 'w-12 h-12 object-contain' : 'w-16 h-16 object-contain'}
                    />
                  </div>
                )}
                <div class="flex-1">
                  <h3 class="text-lg sm:text-xl font-semibold text-white">
                    {edu.degree}
                  </h3>
                  <p
                    class="text-base sm:text-lg"
                    style={`color: ${siteConfig.accentColor}`}
                  >
                    {edu.school}
                  </p>
                </div>
                <span class="text-xs sm:text-sm text-gray-500 mt-2 sm:mt-0">
                  {edu.dateRange}
                </span>
              </div>

              <ul class="space-y-2">
                {edu.achievements.map((achievement) => (
                  <li>
                    <span class="text-sm sm:text-base text-gray-400">
                      {achievement}
                    </span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>
  )
}
