---
import { siteConfig } from "../config";
---

<section id="about" class="p-8 sm:p-12 md:p-16 lg:p-24">
  <div class="max-w-5xl mx-auto">
    <h2
      class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-white text-center mb-8 lg:mb-12"
    >
      About Me
    </h2>

    <div class="space-y-8">
      <p class="text-lg sm:text-xl md:text-2xl leading-relaxed text-gray-400 text-left" set:html={siteConfig.aboutMe}>
      </p>

      <div class="pt-4">
        <div class="flex flex-wrap gap-3 justify-center">
          {
              siteConfig.skills.map((skill) => (
                <span class="px-3 sm:px-4 py-1.5 sm:py-2 bg-neutral-900/70 text-white backdrop-blur-md text-sm sm:text-base md:text-lg font-medium hover:bg-neutral-900/80 transition-all duration-200">
                  {skill}
                </span>
              ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
